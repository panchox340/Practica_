@{ 
    DateTime fechaUltimaLiberacion = (DateTime)ViewBag.fechaUltimaLiberacion;
}
<div class="">
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Liquidaciones a la Fecha</h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body table-responsive no-padding">
            <table class="table table-hover">
                <tbody id="tbody_table">
                    <tr>
                        <th></th>
                        <th>Mes</th>
                        <th>Año</th>
                        <th>Dias trabajados</th>
                    </tr>
                    @{
                        for (int i = 0; i < 24; i++)
                        {
                           
                            <tr>
                                <td><a href="@Url.Action("Liquidacion","Liquidaciones", new {Area = "Liquidaciones", fecha = fechaUltimaLiberacion.AddMonths(-i).ToString("yyyy-MM-dd") })" class="btn btn-default modal-ajax-load pdf-size" data-toggle="modal" data-target="#myModal" data-remote="false"><i class="fa fa fa-file-pdf-o"></i></a></td>
                                <td>@fechaUltimaLiberacion.AddMonths(-i).ToString("MMMM")</td>
                                <td>@fechaUltimaLiberacion.AddMonths(-i).ToString("yyyy")</td>
                                <td>30</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
        <!-- /.box-body -->
    </div>
    <!-- /.box -->
</div>


