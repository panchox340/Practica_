@model List<WebApplicationModel.Documento>


@{
    ViewBag.title = "Documentos";
}
<div class="">
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">@ViewBag.title</h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body table-responsive no-padding">
            <table class="table table-hover">
                <tbody id="tbody_table">
                    <tr>
                        <th></th>
                        <th>Nombre</th>
                    </tr>
                    @{
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <a href="javascript:confirmDelete('¿Desea eliminar el documento?','@Url.Action("deleteDoc", new { id = item.id_doc })')" class="btn btn-default"><i class="fa fa-trash" aria-hidden="true"></i></a>
                                </td>
                                <td>@Html.Raw(item.nombre_original)</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
        <!-- /.box-body -->
    </div>
    <!-- /.box -->
</div>

