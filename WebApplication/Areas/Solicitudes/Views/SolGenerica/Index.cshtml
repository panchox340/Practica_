<a href="@Url.Action("OtraSolicitud", "SolGenerica")" class="btn btn-default modal-ajax-load" data-toggle="modal" data-target="#myModal" data-remote="false">Agregar Solicitud</a>
<hr>

<div class="box">
    <div class="box-header">
        <h3 class="box-title">Otras solicitudes</h3>
    </div>
    <table class="table table-hover">
        <tr>
            <td></td>
            <td> <b>Cliente</b></td>
            <td> <b>Tipo solicitud</b></td>
            <td> <b>Empleado</b></td>
            <td> <b>Monto</b></td>
            <td><b></b></td>
        </tr>
        @{
            string formato = "C3";
            System.Globalization.CultureInfo cultura= System.Globalization.CultureInfo.CreateSpecificCulture("da-DK");
            foreach (WebApplicationModel.ViewOtraSolicitud item in (System.Data.Entity.DbSet
            <WebApplicationModel.ViewOtraSolicitud>
                )(ViewBag.Otra_Solicitud))
            {
                <tr>
                    <td></td>
                    <td> @item.Nom_cor_emp</td>
                    <td> @item.tipo_nov</td>
                    <td> @item.empleado</td>
                    <td>@String.Format("{0:C2}", item.monto)
                    </td>
                    <td> <button onclick="javascript:confirmDelete(null,'@Url.Action("Delete", new { id = item.id_otro })')"  msg-confirmacion ="¿Desea Eliminar el Registro?"><i class="fa fa-trash-o"></i></button></td>
                </tr>
                        }
        }
    </table>
</div>
