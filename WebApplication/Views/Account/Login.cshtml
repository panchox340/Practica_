@model WebApplicationModel.Usuario
@{
    Layout = null;
    ViewBag.Title = "Log in";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>WebApplication</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">

    @Styles.Render("~/Styles/normalize.min.css")
    @Styles.Render("~/Styles/style.css")

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body class="hold-transition login-page">

    <div class="login">
        <h1><img src="~/img/LOGOPAYROLL.png"></h1>
        @{
            if (((string)ViewBag.Cliente).Equals("S"))
            {
                using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "smart-form client-form", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.Hidden("returnUrl", (string)ViewBag.returnUrl)
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.TextBoxFor(m => m.id_usu, new { MaxLength = "20", @class = "form-control", placeholder = "Usuario", required = "required" })
                    @Html.ValidationMessageFor(m => m.id_usu, "", new { @class = "text-danger" })
                    @Html.PasswordFor(m => m.pass_usu, new { MaxLength = "15", @class = "form-control", type = "password", placeholder = "Contraseña", required = "required" })
                    @Html.ValidationMessageFor(m => m.pass_usu, "", new { @class = "text-danger" })
                    @Html.CheckBox("RememberMe")
                    @Html.Label("Recordarme")
                    <button type="submit" class="btn btn-primary btn-block btn-large">Ingresar</button>
                }
            }
            else
            {
                <h1>Debe Seleccionar a un Cliente para Ingresar ejem: www.PayRoll.cl/PSO</h1>
            }
        }
        
    </div>

    @Scripts.Render("~/AdminLTE/plugins/jquery/js")
    @Scripts.Render("~/AdminLTE/bootstrap/js")
    @Scripts.Render("~/AdminLTE/plugins/icheck/js")
    @Scripts.Render("~/AdminLTE/plugins/jquery-validate/js")
    @Scripts.Render("~/Scripts/Account/Login")

</body>
</html>
