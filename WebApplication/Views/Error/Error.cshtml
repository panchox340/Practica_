@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>WebApplication</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">

    @Styles.Render("~/Styles/normalize.min.css")
    @Styles.Render("~/Styles/style.css")

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body class="hold-transition login-page">

    <div class="login">
        <h1><img src="~/img/LOGOPAYROLL.png"></h1>
        @{
            if (((int)ViewBag.http_code) <= 599 && ((int)ViewBag.http_code) >= 500)
            {
                <h1>Error en el Servidor.</h1>
                <h3>Por favor intente nuevamente, en caso de persistir contacte a IT@pso.cl enviando el siguiente código:</h3>
                <h2>@ViewBag.codeError</h2>
            }
            else if (((int)ViewBag.http_code) <= 499 && ((int)ViewBag.http_code) >= 400)
            {
                if (((int)ViewBag.http_code) == 404)
                {
                    <h1>La Pagina Solicitada no fue encontrada</h1>
                    <h3>Por favor verifique la solicitud</h3>
                }
                else
                {
                    <h1>Error en la Solicitud</h1>
                    <h3>Por favor intente nuevamente, en caso de persistir contacte a IT@pso.cl enviando el siguiente código:</h3>
                    <h2>@ViewBag.codeError</h2>
                }
            }
            else
            {
                <h1>Error en el Servidor.</h1>
                <h3>Por favor intente nuevamente, en caso de persistir contacte a IT@pso.cl enviando el siguiente código:</h3>
                <h2>@ViewBag.codeError</h2>
            }
        }

    </div>

    @Scripts.Render("~/AdminLTE/plugins/jquery/js")
    @Scripts.Render("~/AdminLTE/bootstrap/js")
    @Scripts.Render("~/AdminLTE/plugins/icheck/js")
    @Scripts.Render("~/AdminLTE/plugins/jquery-validate/js")
    @Scripts.Render("~/Scripts/Account/Login")

</body>
</html>